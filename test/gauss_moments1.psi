def Variance(x:Distribution[ℝ]){
    //return expectation(then((x)=>x^2)(x))-expectation(x)^2; // TODO: make this work
	return Expectation(sample(x)^2)-Expectation(sample(x))^2;
}

def main(){
    mu := 12;
    nu := 36;
    g := infer(()=>gauss(mu,nu));
    //g := Uniform(0,1);
    mu' := Expectation(sample(g));
    nu' := Variance(g);
    nu'' := Expectation(sample(g)^2)-Expectation(sample(g))^2;
    assert(nu' == nu'');
    return (); // expected: 1
}

def then[a,b](f: a→ b)(d: Distribution[a])=>infer(()=>f(sample(d)));

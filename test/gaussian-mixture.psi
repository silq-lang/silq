
def main(){
    tau := 1;
    sigma := 1;
    mu1 := gauss(0,tau^2);
    mu2 := gauss(0,tau^2);
    
    x1 := if flip(1/3) { gauss(mu1, sigma) } else { gauss(mu2, sigma) };
    x2 := if flip(1/3) { gauss(mu1, sigma) } else { gauss(mu2, sigma) };
    return (x1,x2); // expected: 1/9·e^(-1/4·x1²+-1/4·x2²)·⅟π+5/18·e^(-1/3·x1²+-1/3·x2²+1/3·x1·x2)·⅟π·⅟√3̅
}
